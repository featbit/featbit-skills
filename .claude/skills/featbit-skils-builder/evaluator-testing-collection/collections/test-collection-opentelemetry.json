      "id": "otel-001",
      "name": "otel-basic-configuration-setup",
      "skill": "featbit-opentelemetry",
      "description": "Validates AI can guide through basic OpenTelemetry configuration for FeatBit services with required environment variables.",
      "complexity_level": "intermediate",
      "task_type": "text-comparison",
      "input_task_prompt": "I want to enable OpenTelemetry monitoring for my FeatBit deployment. What environment variables do I need to configure and what do they mean?",
      "evaluation_prompt": {
        "expected_result": {
          "must_include": [
            "ENABLE_OPENTELEMETRY=true",
            "OTEL_SERVICE_NAME variable",
            "OTEL_EXPORTER_OTLP_ENDPOINT variable",
            "Service-specific names (featbit-api, featbit-els, featbit-das)",
            "Collector endpoint format (http://host:4317)",
            "All three services (Api, Evaluation-Server, Data Analytic)"
          ],
          "should_include": [
            "Explanation of each variable purpose",
            "Example values for each service",
            "gRPC endpoint clarification",
            "Links to official OpenTelemetry docs",
            ".NET instrumentation link",
            "Python instrumentation link"
          ],
          "must_not_include": [
            "Incorrect variable names",
            "Missing service name examples",
            "Wrong endpoint format"
          ]
        },
        "evaluation_method": {
          "step_1": "Check if all 3 required environment variables present",
          "step_2": "Verify service names for all 3 services shown",
          "step_3": "Validate endpoint format is gRPC (port 4317)",
          "step_4": "Assess if purpose/explanation provided",
          "step_5": "Check for official documentation references"
        },
        "pass_criteria": [
          "All 6 'must_include' items present",
          "All three FeatBit services covered",
          "Environment variable format correct",
          "At least 3 'should_include' items present",
          "Clear explanations provided"
        ],
        "fail_criteria": [
          "Missing required environment variables",
          "Incorrect variable names or formats",
          "Missing service-specific configuration",
          "No explanations provided",
          "Wrong endpoint format"
        ]
      },
      "prerequisites": [
        "FeatBit deployment (Docker or Kubernetes)",
        "OpenTelemetry collector deployment planned",
        "Basic understanding of environment variables"
      ],
      "expected_duration": "4-5 minutes",
      "tags": ["opentelemetry", "observability", "configuration", "environment-variables", "intermediate"]
    },
